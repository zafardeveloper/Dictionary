<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticeFragmentAndRecyclerView" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Material3.DayNight.Dialog" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>
    <style name="AlertDialogCustom.Destructive">
        <item name="android:buttonBarPositiveButtonStyle">@style/DestructiveButton</item>
    </style>

    <style name="DestructiveButton"
        parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_1</item>
        <item name="colorPrimaryDark">@color/green_1</item>
        <item name="colorAccent">@color/design_default_color_secondary_variant</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
</style>

    <style name="Theme.PracticeFragmentAndRecyclerView" parent="Base.Theme.PracticeFragmentAndRecyclerView" />
</resources>